{
	"$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
	"build": {
		"content": [
			{
				"files": ["**/*.{md,yml}"],
				"exclude": ["_site/**"]
			}
		],
		"resource": [
			{
				"files": ["images/**"]
			}
		],
		"markdownEngineProperties": {
			"markdigExtensions": ["footnotes"]
		},
		"output": "_site",
		"template": ["default", "modern"],
		"globalMetadata": {
			"_appName": "A New Republic",
			"_appTitle": "A New Republic",
			"_enableSearch": true,
			"pdf": false
		}
	}
}
